<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingStart="4dp"
    android:paddingTop="3dp"
    android:paddingBottom="3dp"
    android:paddingEnd="8dp">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardArrival"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textShortSign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="textShortSign"/>

            <ImageView
                android:id="@+id/icArrival"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:contentDescription="Arrival"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textShortSign"
                tools:src="@drawable/marker_max_arrival"/>

            <TextView
                android:id="@+id/textScheduled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="3dp"
                android:maxLines="1"
                app:layout_constraintTop_toBottomOf="@id/textShortSign"
                app:layout_constraintStart_toEndOf="@id/icArrival"
                tools:text="textScheduled"/>

            <TextView
                android:id="@+id/textEstimate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                app:layout_constraintTop_toBottomOf="@id/textScheduled"
                app:layout_constraintStart_toEndOf="@id/icArrival"
                tools:text="textEstimate"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</FrameLayout>